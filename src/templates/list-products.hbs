<table border="1">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Product Description</th>
      <th>Edit | Delete</th>
    </tr>
  </thead>
  <tbody>

  {{#each this}}
  <tr data-id="{{id}}">
    <td><img src="{{img}}" alt="" width=100 height=100></td>
    <td>{{title}}</td>
    <td>{{description}}</td>
    <td>
      <a href="#/products/{{id}}/edit">Edit</a> |
      <a href="#/products/{{id}}/delete">Delete</a>
      <a href="/#/products/add">Add New Product</a>
    </td>
  </tr>
  {{/each}}

  </tbody>
</table>